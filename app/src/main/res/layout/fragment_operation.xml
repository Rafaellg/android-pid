<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.rafaelguimas.pid.OperationFragment"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Imagem A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginBottom="8dp"
            android:layout_weight="1" />

        <TextView
            android:text="Imagem B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="185dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_default_plus"
            android:layout_marginRight="4dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img2"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_default_plus"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:text="Selecionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelect1"
            android:layout_weight="1" />

        <Button
            android:text="Selecionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelect2"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Executar Operação Lógica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOperationLogical"
        android:visibility="gone" />

    <Button
        android:text="Executar Operação Aritmética"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOperationMath"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:layout_marginBottom="8dp"
        android:text="Resultado"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imgResult"
        android:layout_height="185dp"
        android:layout_width="185dp"
        app:srcCompat="@drawable/img_default" />

</LinearLayout>

</ScrollView>

